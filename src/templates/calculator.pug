                                    .order-details__item
                                        p.order-details__item-title Количество страниц в книге:
                                        p.order-details__item-description 180
                                    .order-details__item
                                        p.order-details__item-title Книжный блок:
                                        p.order-details__item-description Бумага офсетная 80 г/м2
                                    .order-details__item
                                        p.order-details__item-title Цветные страницы:
                                        p.order-details__item-description Цветные вставки разбросаны по книге
                                    .order-details__item
                                        p.order-details__item-title Количество цветных страниц в книге:
                                        p.order-details__item-description 20
                                    .order-details__item
                                        p.order-details__item-title Тираж:
                                        p.order-details__item-description 1
